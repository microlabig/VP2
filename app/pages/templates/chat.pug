section.chat
    .container
        aside.chat__left
            .menu
                ul.menu__addition#menuButton
                    - for (var i = 0; i < 3; i++)
                        li.menu__button
                .menu__search
                    input(type="input" placeholder="Найти...")#findInput.menu__search-input
            .members
                ul.members__list#membersList
        .chat__right
            main.main
                .main__header
                    .header
                        h1.header__title Чат
                        .header__q-members
                            #usersQuantity
                .main__content
                    .messages
                        ul#chatList.messages__list
                .main__footer
                    form(name="chatForm").form.form--chat
                        .form__container
                            input(type="input" placeholder="Введите сообщение..." name="chatInput").form__input
                            button(type="button" name="chatButton" disabled="disabled").form__button Отправить
